{:simlayers {:f-mode {:key :f}    ; functional brakets  { } [ ] ( ) < > /
             :d-mode {:key :d}    ; delimiters          = - + " ' ยง . ,
             :v-mode {:key :v}    ; Number pad          7 8 9 4 5 6 1 2 3  
             ; :s-mode {:key :s}    ; symbols             ! @ # $ % ^ & *
             }
 :main [;;
        {:des "CAPSLOCK is CTRL if pressed in combination, otherwise ESC"
         :rules [[:##caps_lock  :left_control  nil  {:alone :escape}]]}

        {:des "f-mode for functional brakets"
         :rules [:f-mode
                 [:##u         :!Sopen_bracket]
                 [:##i         :!Sclose_bracket]
                 [:##o         :open_bracket]
                 [:##p         :close_bracket]

                 [:##j         :!S9]
                 [:##k         :!S0]
                 [:##l         :!Scomma]
                 [:##semicolon :!Speriod]

                 [:##m         :slash]]}

                 ; { } [ ]
                 ; ( ) < >   
                 ; /

        {:des "d-mode for delimiters"
         :rules [:d-mode
                 [:##u         :!Squote]
                 [:##i         :quote]
                 [:##o         :non_us_backslash]

                 [:##j         :equal_sign]
                 [:##k         :hyphen]
                 [:##l         :!Scomma]
                 [:##semicolon :!Speriod]]}

                 ; "  '  `
                 ; =  -  <  >

; {:des "s-mode for symbols"
